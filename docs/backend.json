
{
  "entities": {
    "Zone": {
      "title": "Zone",
      "description": "Represents a geographical area with crowd density tracking.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "capacity": { "type": "number" },
        "userCount": { "type": "number" },
        "density": { "type": "string", "enum": ["free", "moderate", "crowded", "over-crowded"] },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lat": { "type": "number" },
              "lng": { "type": "number" }
            }
          }
        },
        "manualDensity": { "type": "boolean" },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "visibleToUser": { "type": "boolean" },
              "createdAt": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      "required": ["id", "name", "capacity", "userCount", "density", "coordinates"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "User account and real-time location data.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "role": { "type": "string", "enum": ["user", "admin"] },
        "status": { "type": "string", "enum": ["online", "offline"] },
        "groupSize": { "type": "number" },
        "lastLatitude": { "type": "number" },
        "lastLongitude": { "type": "number" },
        "lastSeen": { "type": "string", "format": "date-time" },
        "lastZoneId": { "type": "string" },
        "sos": { "type": "boolean" }
      },
      "required": ["id", "name", "role", "status"]
    },
    "Alert": {
      "title": "Alert",
      "description": "A broadcast message sent to users.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "message": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "zoneId": { "type": "string" }
      },
      "required": ["id", "message", "timestamp"]
    },
    "Settings": {
      "title": "Settings",
      "description": "Global application configuration.",
      "type": "object",
      "properties": {
        "locationUpdateInterval": { "type": "number" },
        "zoneSnappingThreshold": { "type": "number" },
        "latestAlertTimestamp": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/zones/{zoneId}": {
      "schema": "#/backend/entities/Zone",
      "description": "Collection of event zones."
    },
    "/users/{userId}": {
      "schema": "#/backend/entities/UserProfile",
      "description": "Collection of user profiles."
    },
    "/alerts/{alertId}": {
      "schema": "#/backend/entities/Alert",
      "description": "Collection of broadcast alerts."
    },
    "/settings/global": {
      "schema": "#/backend/entities/Settings",
      "description": "Global settings singleton."
    }
  }
}
